<main>
  <% if @admin_user %>
  <header>
    <ul class="user-bar">
      <li><%= link_to 'Edit', edit_comment_type_path(@comment_type) %></li>
      <li><%= link_to 'Delete', @comment_type, method: :delete, data: { confirm: 'Are you sure?' } %></li>
    </ul>
  </header>
  <% end %>

  <h1><%= @comment_type.name %></h1>
  <p><%= @comment_type.description %></p>
</main>
