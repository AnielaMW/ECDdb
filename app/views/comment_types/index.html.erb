<main class="comment_type_index">
  <% if @admin_user %>
    <header>
      <ul class="user-bar">
        <li><%= link_to 'Create New Type', new_comment_type_path %></li>
      </ul>
      <h2>Comment Types</h2>
    </header>
  <% end %>

  <ul class="info-list">
    <% @comment_types.each do |ct| %>
      <li>
        <article id="comment_type_box">
          <h3><%= link_to ct.name, comment_type_path(ct) %> <bdi>- <%= ct.description %></bdi></h3>
        </article>
      </li>
    <% end %>
  </ul>
</main>
