<% if @admin_user %>
  <aside>
    <%= link_to 'Create New Type', new_comment_type_path %>
  </aside>
<% end %>

<main>
  <ul id="comment_type_list">
    <% @comment_types.each do |ct| %>
      <li>
        <article id="comment_type_box">
          <%= link_to ct.name, comment_type_path(ct) %>
        </article>
      </li>
    <% end %>
  </ul>
</main>
