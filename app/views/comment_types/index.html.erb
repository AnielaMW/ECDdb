<main>
  <% if @admin_user %>
    <header>
      <ul class="user-bar">
        <li><%= link_to 'Create New Type', new_comment_type_path %></li>
      </ul>
      <h1>Comment Types</h1>
    </header>
  <% end %>

  <ul id="info_list">
    <% @comment_types.each do |ct| %>
      <li>
        <article id="comment_type_box">
          <h6><%= link_to ct.name, comment_type_path(ct) %></h6>
          <p><%= ct.description %></p>
        </article>
      </li>
    <% end %>
  </ul>
</main>
