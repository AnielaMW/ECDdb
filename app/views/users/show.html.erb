<main>
  <header>
    <h1><%= @user.first_name %></h1>
    <%= link_to "Edit Profile", edit_user_registration_path(@user) %>
  </header>

  <% if @user.dances? %>
    <section id="dances">
      <h2>Dances</h2>
      <ul id="dance_list">
        <% @dances.each do |dance| %>
        <li>
          <%= render 'dances/dance_box', dance: dance %>
        </li>
        <% end %>
      </ul>
    </section>
  <% end %>

  <% if @user.dance_comments? %>
    <section id="dance_comments">
      <h2>Comments</h2>
      <ul id="dance_comment_list">
        <% @dance_comments.each do |dc| %>
          <li>
            <%= render 'dance_comments/dance_comment_box', dc: dc %>
          </li>
        <% end %>
      </ul>
    </section>
  <% end %>
</main>
