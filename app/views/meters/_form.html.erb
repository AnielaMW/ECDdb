<%= form_for(@meter) do |f| %>

  <div class="field required">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
  </div>

  <div class="field required">
    <%= f.label :description, "Description" %>
    <%= f.text_area :description %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
